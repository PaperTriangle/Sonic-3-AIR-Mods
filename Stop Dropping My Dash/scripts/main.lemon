function void fn0317ae()
{
	if (global.characters > 0x03 || (global.xtrachar == 1 && u8[0xffffb000 + 0x0d] & 0x02))
	{
		base.fn0317ae()
		return
	}
	
	if !((global.xtrachar == 5 && System.getGlobalVariableValueByName("shadow.DropDown")) || (global.xtrachar == 3 && System.getGlobalVariableValueByName("Amy_HammerSpinAttacking") && u8[A1 + 0x2f] == 0))
		objA1.velocity.y = -0x700
	objA1.flags2a |= char.flag.IN_AIR
	objA1.flags2a &= ~(char.flag.CONTROL_LOCK | char.flag.PUSHING)


	u8[A1 + 0x2e] = 0
	if (u8[A1 + 0x40] == 1)
		balloonjump = 1

	objA0.state |= 0x01
	if (s8[A0 + 0x2c] < 0)
	{
		if !((global.xtrachar == 5 && System.getGlobalVariableValueByName("shadow.DropDown")) || (global.xtrachar == 3 && System.getGlobalVariableValueByName("Amy_HammerSpinAttacking") && u8[A1 + 0x2f] == 0))
			objA1.velocity.y = -0x380
		
		if (level.water_present != 0 && u8[A0 + 0x34] == 0)
		{
			A2 = 0x03185a
			fn03181e()
			fn03181e()
			fn03181e()
			fn03181e()
			objA1.position.x.u16 = objA0.position.x.u16
			objA1.position.y.u16 = objA0.position.y.u16
		}
	}

	if (u8[A0 + 0x34] == 0)
	{
		playSound(0x77)
		u8[A0 + 0x34] = 0x01
	}
}

function void Character.updateJumpMoves()
{
	if (A0 != 0xffffb000)
	{
		base.Character.updateJumpMoves()
		return
	}
	
	s16 balloon_vel = char.velocity.y
	if (balloon_vel >= 0)
		balloonjump = 0
	
	if (!balloonjump)
	{
		base.Character.updateJumpMoves()
		return
	}

	char.velocity.y = 0
	base.Character.updateJumpMoves()
	
	if !(global.xtrachar == 1 && u8[0xffffb000 + 0x0d] & 0x02)
		char.velocity.y = balloon_vel
}

