function void fn01dc56()
{
	oldJumpState1 = u8[0xffffb000 + 0x40]
	oldJumpState2 = u8[0xffffb000 + 0x2f]
	
	// Check player 1
	A1 = 0xffffb000
	D6 = 3		// object.flag.P1_ON_OBJECT
#if STANDALONE
	if (debug_mode.state == 0)
#endif
	{
		u32 backupD1 = D1
		u32 backupD2 = D2
		u32 backupD3 = D3
		u32 backupD4 = D4

		fn01dc74()

		D1 = backupD1
		D2 = backupD2
		D3 = backupD3
